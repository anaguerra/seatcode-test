        "php": "^7.4",
        "ext-json": "*",
        "bensampo/laravel-enum": "^3",
        "psr/log": "^1.1",
        "ramsey/uuid": "^4.1",
        "php-di/php-di": "^6.3",
        "nesbot/carbon": "^2.56",
        "larapack/dd": "^1.1"
